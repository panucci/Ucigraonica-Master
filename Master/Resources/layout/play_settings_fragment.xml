<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorSecondary"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/matematika" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sabiranje_label" />
            <Spinner
                android:entries="@array/numbers_array"
                android:layout_marginBottom="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/sabiranjeSpinner" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oduzimanje_label" />
            <Spinner
                android:entries="@array/numbers_array"
                android:layout_marginBottom="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/oduzimanjeSpinner" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnozenje_label" />
            <Spinner
                android:entries="@array/numbers_array"
                android:layout_marginBottom="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/mnozenjeSpinner" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deljenje_label" />
            <Spinner
                android:entries="@array/numbers_array"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/deljenjeSpinner" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#aabbbbbb" />
    </LinearLayout>
</ScrollView>